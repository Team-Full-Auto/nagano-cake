<%= render "layouts/header" %>
<div class="container px-5">
  <h2>注文履歴詳細</h2>
  <div class="row">
    <div class='col mx-auto'>
      <table class="table table-hover table-inverse table-borderless">
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.family_name %><%= @order.customer.last_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postcode %><%= @order.address %><%= @order.address_name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
            <td>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.hidden_field :id, :value => @order.id %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9 mt-5">
      <table class="table table-hover table-inverse">
        <thead>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
        </thead>
        <tbody>
          <% @order_items.each do |order| %>
            <tr>
              <td>
                <%= order.item.name %>
              </td>
              <td><%= order.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= order.quantity %></td>
              <td><%= ((order.item.with_tax_price)*(order.quantity)).to_s(:delimited) %></td>
              <%= form_with model: order, url: admin_order_item_path(order.id), method: :patch do |f| %>
                <td>
                  <%= f.select :create_status, OrderItem.create_statuses_i18n.invert %>
                  <%= f.hidden_field :id, :value => order.id %>
                  <%= f.hidden_field :order_id, :value => @order.id %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 mt-5">
      <table class="table table-hover table-inverse table-borderless">
        <tr>
          <th>商品合計</th>
          <td><%= @total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <td><%= @order.payment.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>