<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h3>
        <%= @customer.family_name %>
        <%= @customer.last_name %>さんの会員情報編集
      </h3>
      <table class="table table-hover table-inverse">
        <%= form_with model: @customer, local:true do |f| %>
          <tr>
            <th><%= f.label :family_name, "氏名" %></th>
            <td><%= f.text_field :family_name %></td>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <th><%= f.label :family_name_kana, "フリガナ" %></th>
            <td><%= f.text_field :family_name_kana %></td>
            <td><%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <th><%= f.label :postcode, "郵便番号" %></th>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <th><%= f.label :address, "住所" %></th>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr>
            <th><%= f.label :phone_number, "電話番号" %></th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th><%= f.label :is_deleted, "会員ステータス" %></th>
            <td></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存",class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>