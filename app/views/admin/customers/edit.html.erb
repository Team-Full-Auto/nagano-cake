<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row">
    <div class="mx-auto text-left">
      <h3>
        <%= @customer.family_name %>
        <%= @customer.last_name %>さんの会員情報編集
      </h3>
          <table class="table table-hover table-inverse">
            <tr>
              <th>会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
          </table>
        <%= form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch, local:true do |f| %>
          <table class="table table-hover table-inverse">
            <tr>
              <th><%= f.label :family_name, "氏名" %></th>
              <td><%= f.text_field :family_name %></td>
              <td><%= f.text_field :last_name %></td>
            </tr>
            <tr>
              <th><%= f.label :family_name_kana, "フリガナ" %></th>
              <td><%= f.text_field :family_name_kana %></td>
              <td><%= f.text_field :last_name_kana %></td>
            </tr>
            <tr>
              <th><%= f.label :postcode, "郵便番号" %></th>
              <td><%= f.text_field :postcode %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :address, "住所" %></th>
              <td><%= f.text_area :address, size: "40" %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :phone_number, "電話番号" %></th>
              <td><%= f.text_field :phone_number %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :email, "メールアドレス" %></th>
              <td><%= f.text_field :email %></td>
              <td></td>
            </tr>
            <tr>
              <th><%= f.label :is_deleted, "会員ステータス" %></th>
              <td>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, "有効" %>
              </td>
              <td>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, "退会" %>
              </td>
            </tr>
            <tr>
              <td><%= f.submit "変更を保存", class:'btn btn-success' %></td>
              <td></td>
              <td></td>
            </tr>
          </table>

        <% end %>
    </div>
  </div>
</div>