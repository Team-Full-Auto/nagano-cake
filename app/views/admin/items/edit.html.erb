<div class='container px-5'>
  <div class='row'>
    <div class='mx-auto'>
      <h2>商品編集</h2>
      <%= form_with model:form do |f| %>
        <div class="form-group">
          <%= f.label :商品画像 %>
          <%= f.file_field :image, accept: "image/*" %>          
        </div>
        <div classs="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name %>
        </div>
        <div classs="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :detail %>
        </div>
        <div classs="form-group">
          <%= f.label :税抜価格 %>
          <%= f.number_field :price %>円
        </div>
        <div classs="form-group">
          <%= f.submit "編集", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>