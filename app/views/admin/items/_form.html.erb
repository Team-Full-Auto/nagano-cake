<%= form_with(model: form, url: admin_items_path, method: :post) do |f| %>
<!-- エラーメッセージ表示-->
  <% if form.errors.any? %>
    <h3><%= form.errors.count %>件のエラーが発生しました</h3><!--エラーメッセ-->
    <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<!-- エラーメッセージ表示-->
  <div class="form-group">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :detail, "商品説明" %>
    <%= f.text_area :detail %>
  </div>
  <div class="form-group">
    <%= f.label :genre, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"} %>
  </div>
  <div class="form-group">
    <%= f.label :price, "税抜価格" %>
    <%= f.number_field :price %>円
  </div>
  <div class="form-group">
    <%= f.radio_button :is_selling, true %>
    <%= f.label :is_selling, "販売中" %>
    <%= f.radio_button :is_selling, false %>
    <%= f.label :is_selling, "販売停止中" %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
