<%= render 'layouts/header'%>
<div class="container px-5">
  <h2>商品詳細</h2>
  <div class="row">
      <div class="col-4 mt-5">
        <%= flash[:notice] %>
        <%= image_tag @item.image, class: "img-fluid" %>
      </div>
      <div class="col-8 mt-5">
        <table class="table table-hover table-inverse table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr >
          <th >商品詳細</th>
          <td ><%= @item.detail %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <% if @item.is_selling == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
        </table>
        <div>
          <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
        </div>
      </div>
  </div>
</div>
