<div class="container px-5">
  <div class="row">
    <div class="col-md-9">
      <h2>ジャンル一覧・追加</h2>
      <%= flash[:notice] %>
      <%= form_with(model: @genre, url: admin_genres_path, method: :post) do |f| %>
      <!-- エラーメッセージ表示-->
      <% if @genre.errors.any? %>
        <h3><%= @genre.errors.count %>件のエラーが発生しました</h3><!--エラーメッセ-->
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      <% end %>
      <!-- エラーメッセージ表示-->
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
      <table class="table table-hover tavle-bordere table-inverse" >
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>