<div class="container px-5">
  <div class="row">
    <div class="col-md-9">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @genre do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
      <table class="table table-hover tavle-bordere table-inverse" >
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| do %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre) 
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>