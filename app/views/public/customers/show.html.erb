<%= render "layouts/header", customer: @customer %>
<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
      <h3>マイページ</h3>
      <h4>登録情報<%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-success" %></h4>
      <%= flash[:notice] %>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @customer.family_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.family_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <h4 class="d-inline mr-5 ">配送先</h4><%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-primary ml-5" %><br>
      <h4 class="d-inline mr-5">注文履歴</h4><span class="ml-4"><%= link_to "一覧を見る",  orders_path, class:"btn btn-primary mt-3" %></span>
    </div>
  </div>
</div>