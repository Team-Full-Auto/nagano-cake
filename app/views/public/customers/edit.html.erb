<%= render "layouts/header" %>
<div class="container px-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h3>会員情報編集</h3>

      <%= form_with model: @customer, local:true do |f| %>
        <div class="form-group">
          <%= f.label :family_name, "氏名" %>
          <%= f.text_field :family_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="form-group">
          <%= f.label :family_name_kana, "フリガナ" %>
          <%= f.text_field :family_name_kana %>
          <%= f.text_field :last_name_kana %>
        </div>
        <div class="form-group">
          <%= f.label :postcode, "郵便番号" %>
          <%= f.text_field :postcode %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, "電話番号" %>
          <%= f.text_field :phone_number %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>