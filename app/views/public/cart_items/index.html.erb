<div class="container px-5">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h2>ショッピングカート</h2> 
      <div><%= link_to "Destroy", destroy_all_path, method: :delete, class:"btn btn-sm btn-danger" %></div>
      <table class="table table-hover table-bordere" >
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "60×50" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with (model: cart_item, url: cart_item_path(cart_item), method: :patch) do |f| %>
              <%= f.select :quantity, *[1..100] %>
              <%= f.submit "変更", class: 'btn btn-success' %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %></td>
            <% @sum += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table class="table table-bordere">
        <thead>
          <tr>
            <th>合計金額</th>
            <th><%= @sum %></th>
          </tr>
        </thead>
      </table> 
      <div>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>
      <div>
        <% if @cart_items.count == 0 %>
          <%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success" %>
        <% else %>
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
