<%= render "layouts/header", customer: current_customer %>
<div class="container px-5 mt-5">
  <h2>注文履歴詳細</h2>
  <div class="row mx-auto">
    <div class="col-8 mt-5">
      <h3>注文情報</h3>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postcode %><%= @order.address %><%= @order.address_name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4 mt-5">
      <h3>請求情報</h3>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row" >
    <h3>注文内容</h3>
    <table class="table table-hover table-inverse table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_item.each do|order|%>
          <tr>
            <td>
              <%= order.item.name %>
            </td>
            <td><%= order.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order.quantity %></td>
              <!--小計の計算-->
            <td><%= ((order.item.with_tax_price)*(order.quantity)).to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
