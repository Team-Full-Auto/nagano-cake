<%= render 'layouts/header', customer: current_customer%>
<div class="container">
  <div class="row">
<h2>注文情報確認</h2>
<table>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
  </tr>
  <tbody>
<% @cart_items.each do|cart_item|%>
  <tr><%= image_tag cart_item.item.image %><%= cart_item.item.name %></tr>
          <tr><%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',') %></tr>
          <tr><%= cart_item.quantity %></tr>
          <tr><%= ((cart_item.item.with_tax_price)*(cart_item.quantity)).to_s(:delimited, delimiter: ',') %></tr>
          <% end %>
        </tbody>
          

            
          </table>
        </div>
        <div class='col-3'>
            <table class="table table-bordered border-dark">
               
                <tr><th class="table-secondary">送料</th><td><%=@order.postage %></td></tr>
                <tr><th class="table-secondary">商品合計</th><td><%= @total.to_i %></td></tr>
                <% @order.payment = @order.postage + @total.to_i %>
                <tr><th class="table-secondary">請求金額</th><td><%= @order.payment %></td></tr>
            </table>
        </div>
    </div>

<p>ご請求金額</p>
<%= @order.payment %> <!-- お買い物の合計金額 -->
 <tr><th>支払方法</th><td class="col-10"><%= @order.payment_method %></td></tr>
<p>お届け先</p>
<%= @order.postcode %>
              <%= @order.postcode %>
                <%= @order.address %>
                <%= @order.address_name %>
  

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>

  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :total_price, value: @total %>
  <%= f.submit "注文を確定する" ,class: 'btn btn-success' %>
<% end %>
</div>
</div>